<section class="notifications">
    <p class="notification-message">Message... Loged in user home page</p>
</section>

<main>
    <h1 class="text-center">Courses</h1>
    <section>
        <a href="/course/create" class="btn btn-warning ">Create Course</a>
        <form class="search float-right" action="/home/search" method="POST">
            <label for="searchTarget">Search: </label>
            <input type="text" name="searchTarget"> 
            <input type="submit" class="btn btn-primary" value="Search">
        </form>
    </section>

    <div class="container mt-3">
        <div class="row ">
            <div class="card-deck d-flex justify-content-center">
                {{#each sortedCourse}}
                <div class="card mb-4">
                    <img class="card-img-top" src="{{ imageUrl}}" alt="Card image cap" width="400">
                    <div class="card-body">
                        <h4 class="card-title">{{ title }}</h4>
                    </div>
                    <div class="card-footer">
                        <a href="/course/details/{{ _id }}"><button type="button" class="btn btn-primary">Details</button></a>
                        <small class="float-right">{{ createdAt }}</small>
                    </div>
                </div>
                {{else}}
                <h3 class="text-center">No courses...</h3>
                {{/each}}
            </div>
        </div>
    </div>

</main>